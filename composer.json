{
    "name": "nikla/plugin",
    "description": "Tischverwaltung",
    "authors": [
        {
            "name": "niklas-mischi",
            "email": "niklas.mischi@gmail.com"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1",
        "composer/installers": "^1.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.8.0",
        "nunomaduro/phpinsights": "^1.8"
    },
    "scripts": {
        "fix-cs": [
            "php-cs-fixer fix --config=.php_cs --allow-risky=yes"
        ]
    }
}